@model Metasoft.Models.AlterarPerfilViewModel

@{
    ViewBag.Title = "Alterar perfil usuário";

}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "AlterarPerfilUsuario" }))
{
    @Html.AntiForgeryToken()
    <br />
    <br />

    <div class="panel panel-default" style="width:60%;margin:0 auto;height:250px;">
        <div class="panel-heading-crud">
            <div style="float:left;"><i class="fa fa-user"></i>&nbsp;@ViewBag.Title</div>
        </div>
        <div class="panel-body panel-body-crud" style="padding:5px 5px 5px 5px;">
            <div class="row">
                @Html.HiddenFor(model => model.roleid)
                @Html.HiddenFor(model => model.id)
                @Html.HiddenFor(model => model.rolename)
                <div class="col-md-12 clientediv">
                    @Html.LabelFor(model => model.username, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @disabled="disabled" } })
                </div>
                <div class="col-md-12 clientediv">
                    @Html.LabelFor(model => model.rolename, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.rolename, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                </div>
                <div class="col-md-12 clientediv">
                    @Html.Label("Novo perfil", htmlAttributes: new { @class = "control-label" })
                    <select id="perfis" name="perfis" class="form-control  form-control-custom">
                    </select>
                </div>
            </div>

            <div class="row">
                <a id="saveico" href="#" onclick="submitform('AlterarPerfilUsuario');" title="Salvar"  class="actionicon savenew" style="font-size:26px;"><i id="saveimg" class="fa fa-save"></i></a>
                <a id="alterarico" href="/Usuarios/ListaUsuarios" title="Voltar para lista" class="actionicon savenew" style="font-size:26px;"><i id="alcliimg" class="fa fa-arrow-left"></i></a>
            </div>


        </div>
    </div>

}

@section Scripts {
   <script type="text/javascript">
       $(document).ready(function () {
         PopulatePerfis("perfis","P");
      });
    </script>
    @Scripts.Render("~/bundles/jqueryval")
}
