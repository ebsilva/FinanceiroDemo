@model Metasoft.Models.TiposReembolso
@{ ViewBag.Title = "Alterar Tipo Reembolso";}


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "AlterarTipoReembolso" }))
{
    @Html.AntiForgeryToken()
    <br />
    <br />
    <div class="panel panel-default" style="width:60%;margin:0 auto;height:50px;">
        <div class="panel-heading-crud">
            <div style="float:left;"><i class="fa fa-file-text-o"></i>&nbsp;@ViewBag.Title</div>
        </div>
        @Html.HiddenFor(model => model.tiporeembolsoid)
        <div class="panel-body panel-body-crud" style="padding:5px 5px 5px 5px;">
            <div class="row">

                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.nome, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <a id="saveico" href="#" onclick="submitform('AlterarTipoReembolso');" title="Salvar" class="actionicon savenew" style="font-size:26px;"><i id="saveimg" class="fa fa-save"></i></a>
                <a id="alterarico" href="/TiposReembolso/ListaTiposReembolso" title="Voltar para lista" class="actionicon savenew" style="font-size:26px;"><i id="alcliimg" class="fa fa-arrow-left"></i></a>
            </div>

        </div>
    </div>
                            }

@section Scripts {
    <script type="text/javascript">
    $(document).ready(function () {
        ebs.SetValorMask();
        if ('@Html.Raw(ViewBag.jaexiste)' != "") { msg('@Html.Raw(ViewBag.jaexiste)'); }
      });
    </script>

}
@Scripts.Render("~/bundles/jqueryval")}

