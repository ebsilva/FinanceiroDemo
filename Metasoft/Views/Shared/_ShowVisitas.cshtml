@model IEnumerable<Metasoft.Models.Visita>

<div style="overflow-y:auto;">

@if (Model != null)
{
    if (Model.Count() > 0)
    {
        <table   class="detalhesvisita" style="width:100%;">
            <thead>
                <tr>
                    <th style="width:10%;">Data</th>
                    <th style="width:20%;">Descrição</th>
                    <th style="width:20%;">Contato</th>
                    <th style="width:15%;">Fone</th>
                    <th style="width:15%;">Celular</th>
                    <th style="width:20%;">Local</th>
               </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="background-color:transparent">
                        <td>@item.VisitaEm.ToShortDateString()</td>
                        <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                        <td>@Html.DisplayFor(modelItem => item.Contato)</td>
                        <td>@Html.DisplayFor(modelItem => item.Fone)</td>
                        <td>@Html.DisplayFor(modelItem => item.Celular)</td>
                        <td>@Html.DisplayFor(modelItem => item.Local)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
          <div></div>
    }
}
else
{
    <br />
    <h6>Não há visitas  para esta proposta</h6>
}

</div>