@model Metasoft.Models.Reembolso

@{ ViewBag.Title = "Alterar Reembolso";}


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "AlterarReembolso" }))
{
    @Html.AntiForgeryToken()
    <br />
    <br />
    @Html.HiddenFor(model => model.reembolsoid);
    @Html.HiddenFor(model => model.dtcad);
    @Html.HiddenFor(model => model.reembolsoid);
    @Html.HiddenFor(model => model.situacao);
    @Html.HiddenFor(model => model.userid);

    <div class="panel panel-default" style="width:75%;margin:0 auto;height:250px;">
        <div class="panel-heading-crud">
            <div style="float:left;"><i class="fa fa-pencil-squere-o"></i>&nbsp;@ViewBag.Title</div>
        </div>
        <div class="panel-body panel-body-crud" style="padding:5px 5px 5px 5px;">
            <div class="row">
                <div class="col-md-2 clientediv">
                    @Html.Label("Referência", htmlAttributes: new { @class = "control-label datepicker" })
                    <div class="input-group date">
                        @Html.TextBoxFor(model => model.vencimento, htmlAttributes: new { @class = "form-control" })
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.vencimento, "", new { @class = "text-danger" })

                </div>

                <div class="col-md-3 clientediv">
                    <label class="control-label">Tipo Reembolso</label>
                    <select id="tiporeembolso" name="tiporeembolso" class="form-control form-control-custom" data-val="true" data-val-required="Tio reembolso é obrigatório"></select>
                </div>
                <div class="col-md-5 clientediv">
                    @Html.LabelFor(model => model.descricao, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.descricao, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.descricao, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2 clientediv">
                    @Html.LabelFor(model => model.valor, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.valor, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.valor, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <a id="saveico" href="#" onclick="submitform('AlterarReembolso');" title="Salvar" class="actionicon savenew" style="font-size:26px;"><i id="saveimg" class="fa fa-save"></i></a>
                <a id="alterarico" href="/Reembolsoes/ReembolsoUsuario" title="Voltar para lista" class="actionicon savenew" style="font-size:26px;"><i id="alcliimg" class="fa fa-arrow-left"></i></a>
            </div>
         </div>
    </div>

}


@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $(".datepicker").datepicker();
            Set_DatePicker();
                //$('.input-group.date').datepicker({
                //    format: "mm/yyyy",
                //    startView: "year",
                //    minViewMode: "months",
                //    language: 'pt-BR',
                //    weekStart: 0,
                //    startDate: '0d',
                //    autoclose: true,
                //    todayHighlight: true
                //});

            PopulateTiposReembolso('tiporeembolso');
            ebs.SetValorMask();
            SetDropDownValue('@Html.Raw(ViewBag.tiporeembolsoid)', "tiporeembolso")
            $("#vencimento").val('@Html.Raw(ViewBag.referencia)')
        });





    </script>
    @Scripts.Render("~/Scripts/bootstrap-datepicker.min.js")
    @Scripts.Render("~/Scripts/locales/bootstrap-datepicker.pt-BR.min.js")
}
