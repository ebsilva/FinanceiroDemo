@model Metasoft.Models.Produto

@{ ViewBag.Title = "Novo Produto";}


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "NovoProduto" }))
{
    @Html.AntiForgeryToken()
    <br />
    <br />
    <div class="panel panel-default" style="width:70%;margin:0 auto;height:50px;">
        <div class="panel-heading-crud">
            <div style="float:left;"><i class="fa fa-shopping-cart"></i>&nbsp;@ViewBag.Title</div>
        </div>
        <div class="panel-body panel-body-crud" style="padding:5px 5px 5px 5px;">
            <div class="row">

                <div class="col-md-9">
                    <div class="form-group">
                        @Html.LabelFor(model => model.nome, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.valor, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.valor, new { htmlAttributes = new { @class = "form-control" } })
                        @{ Html.EnableClientValidation(false); }
                    </div>
                </div>
            </div>

            <div class="row">
                <a id="saveico" href="#" onclick="submitform('NovoProduto');" title="Salvar" class="actionicon savenew" style="font-size:26px;"><i id="saveimg" class="fa fa-save"></i></a>
                <a id="alterarico" href="/Produtos/ListaProdutos" title="Voltar para lista" class="actionicon savenew" style="font-size:26px;"><i id="alcliimg" class="fa fa-arrow-left"></i></a>
            </div>

        </div>
    </div>
}

@section Scripts {
    <script type="text/javascript">
    $(document).ready(function () {
          ebs.SetValorMask("#valor")
        if ('@Html.Raw(ViewBag.jaexiste)' != "") { msg('@Html.Raw(ViewBag.jaexiste)'); }
      });
    </script>
 
}


